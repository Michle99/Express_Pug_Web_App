extends layout

block content
    h1 Login
    form#login-form(action="/login" method="post")
        div.form-group
            label(for="username") Username
            input#username.form-control(type="text" name="username" required)
        div.form-group
            label(for="password") Password
            input#password.form-control(type="password" name="password" required)
        button.btn.btn-primary(type="submit") Login
        if error
            p#error-message.text-danger=error
        else
            p#error-message.text-danger(style="display: none;")
