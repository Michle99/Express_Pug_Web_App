extends layout

block content
    h1 Login
    form#login-form(action="/login" method="post" onsubmit="return validateLoginForm();")
        div.form-group
            label(for="username") Username
            input#username.form-control(type="text" name="username" required)
        div.form-group
            label(for="password") Password
            input#password.form-control(type="password" name="password" required)
        button.btn.btn-primary(type="submit") Login
        p Don't have an account yet?
        a(href="/register").btn.btn-info Register
        if error
            p#error-message.text-danger=error
        else
            p#error-message.text-danger(style="display: none;")

    script(src="/javascripts/validateLoginForm.js" type="text/javascript")